<h1>Edit existing article </h1>
<% if @article.errors.any? %>
<h2>The following errors prevented the article from getting created</h2>
<ul>
  <% @article.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>
<% end %>
<%= form_for @article do |fo| %>
  <p>
    <%= fo.label :title %><br/>
    <%= fo.text_field :title %>
  </p>
  <p>
    <%= fo.label :description %><br/>
    <%= fo.text_area :description %>
  </p>
  <p>
    <%= fo.submit %>
  </p>
<% end %>
<%= link_to 'Back to article listing', articles_path %>